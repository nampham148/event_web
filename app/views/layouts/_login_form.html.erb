<% if user_signed_in? %>
  <div class="navbar-item has-dropdown is-hoverable">
    <a class="navbar-link">
      Your Profile
    </a>
    <div class="navbar-dropdown">
      <%= link_to "View Your Profile", current_user, class: "navbar-item" %>
      <%= link_to "Update Your Profile", edit_user_registration_url, class: "navbar-item" %>
      <%= link_to "Connect to Facebook", user_facebook_omniauth_authorize_url, class: "navbar-item" %>
      <%= link_to "Connect to Twitter", user_twitter_omniauth_authorize_url, class: "navbar-item" %>
      <%= link_to "Connect to Google", user_google_oauth2_omniauth_authorize_url, class: "navbar-item" %>
      <hr class="navbar-divider">
      <div class="navbar-item">
        Version 0.7.1
      </div>
    </div>
  </div>
  <%= link_to "Log out", destroy_user_session_url, class: "navbar-item", method: :delete %>
<% else %>
  <%= link_to "Log in", new_user_session_url, class: "navbar-item" %>
  <%= link_to "Sign up", new_user_registration_url, class: "navbar-item" %>
<% end %>