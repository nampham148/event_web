<div class="column is-one-third-desktop is-half-tablet">
  <div class="card bm--card-equal-height">
    <div class="card-image">
      <figure class="image is-4by3">
        <%= image_tag event.picture, alt: "Event image" %>
      </figure>
    </div>
    <div class="card-content">
      <div class="content">
        <h3 class="title is-3"> <%= event.name %> </h3>
        <p> <%= event.event_start.strftime("%b %d, %Y") %> to <%= event.event_end.strftime("%b %d, %Y") %> </p>
        <p> <%= event.short_desc %> </p>
      </div>
    </div>
    <footer class="card-footer">
      <% if event.registerable? %>
        <%= content_tag :div, class: "card-footer-item", id: "register-form-#{event.id}" do %>
          <%= render 'events/register_form', event: event %>
        <% end %>
      <% end %>
      <%= link_to "Learn more", event, class: "card-footer-item" %>
  </footer>
  </div>
</div>