<% if current_user.registered?(event) %>
  <%= link_to "Unregister", registration_url(current_user.registrations.find_by(event_id: event.id)), method: :delete, remote: true %> <!-- MIGHT BE BAD PRACTICE, CONSIDER CHANGING INLINE CSS -->
<% else %>
  <%= link_to "Register", registrations_url(event_id: event.id), method: :post, remote: true %>
<% end %>